#!/usr/bin/env bash

set -e
DIR=$(cd `dirname $0` && pwd)
ROOT_DIR="${DIR}/.."

rep () {
  SEARCH_STRING=$1
  REPLACE_STRING=$2
  SCAN_DIRS=( \
    "src/main/java/org/hellosign/openapi/api" \
    "src/main/java/org/hellosign/openapi/model" \
    "src/test/java/org/hellosign/openapi/api" \
  )

  printf "\nScanning for '${SEARCH_STRING}': "

  set +e
  for i in "${SCAN_DIRS[@]}"
  do
    perl -pi -e "s/${SEARCH_STRING}/${REPLACE_STRING}/g" \
      "${ROOT_DIR}/${i}/"*.*
  done
}

perl -pi -e 's/(.*)AllOf.md\)\n//g' "${ROOT_DIR}/README.md"

rep 'import org.hellosign.(.*)AllOf;\n' ''
